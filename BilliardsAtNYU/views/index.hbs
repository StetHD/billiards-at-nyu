<div class='homemain'>

{{#if admin}}
  <form action='/posts/new' method='GET'>
    <input type='submit' value='New Post'>
  </form>
{{/if}}

{{#each posts}}
  <hr>
  <div class='post'>
    <h2 class='posttitle'>
    {{title}}
    </h2>
    <p class='postcontent'>
    {{content}}
    </p>
  </div>
{{/each}}
<hr>

</div>
<div class='homeside'>
  Placeholder for other content; Possibly events, etc
</div>
